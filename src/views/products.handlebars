<div class="container">
    <div class="row">
        {{#each payload}}
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="{{this.image}}" class="card-img-top" alt="Product Image">
                <div class="card-body">
                    <h5 class="card-title text-black">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-price">Price: {{this.price}}</p>
                    <p class="card-stock">Stock: {{this.stock}}</p>
                    <form class="cart-form" data-cart-id="{{this.cartId}}" data-product-id="{{this._id}}">
                        <button type="button" class="btn btn-primary add-to-cart">Agregar al carrito</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="js/products.js"></script>