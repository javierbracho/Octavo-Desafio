
<h2>Productos actualizados en tiempo real</h2>

<div id="contenedorProductos" class="row"></div>


<h2>Formulario para agregar productos</h2>

<form>
    <div class="mb-3">
        <label for="title" class="form-label">Título</label>
        <input type="text" class="form-control" id="title" placeholder="Ingrese el título">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Descripción</label>
        <input type="text" class="form-control" id="description" placeholder="Ingrese la descripción">
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label for="price" class="form-label">Precio</label>
            <input type="number" class="form-control" id="price" placeholder="Ingrese el precio">
        </div>
        <div class="col-md-6">
            <label for="stock" class="form-label">Stock</label>
            <input type="number" class="form-control" id="stock" placeholder="Ingrese el stock">
        </div>
    </div>
    <div class="mb-3">
        <label for="img" class="form-label">Imagen</label>
        <input type="text" class="form-control" id="img" placeholder="Ingrese la URL de la imagen">
    </div>
    <div class="mb-3">
        <label for="code" class="form-label">Código</label>
        <input type="text" class="form-control" id="code" placeholder="Ingrese el código">
    </div>
    <div class="mb-3">
        <label for="category" class="form-label">Categoría</label>
        <input type="text" class="form-control" id="category" placeholder="Ingrese la categoría">
    </div>
    <div class="mb-3">
        <label for="status" class="form-label">Estado</label>
        <select class="form-select" id="status">
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="year" class="form-label">Año</label>
        <input type="number" class="form-control" id="year" placeholder="Ingrese el año">
    </div>
    <div class="mb-3">
        <label for="engine" class="form-label">Motor</label>
        <input type="text" class="form-control" id="engine" placeholder="Ingrese el motor">
    </div>
    <div class="mb-3">
        <label for="transmission" class="form-label">Transmisión</label>
        <input type="text" class="form-control" id="transmission" placeholder="Ingrese la transmisión">
    </div>
    <div class="mb-3">
        <label for="drivetrain" class="form-label">Tracción</label>
        <input type="text" class="form-control" id="drivetrain" placeholder="Ingrese la tracción">
    </div>

    <button type="button" class="btn btn-primary" id="btnEnviar">Enviar</button>
</form>


<script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
<script src="/js/realtime.js"></script>